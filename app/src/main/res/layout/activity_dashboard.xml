<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".DashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="50dp"
            android:layout_centerInParent="true"
            android:background="#ffffff">

            <TextView
                android:id="@+id/AppLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="68sp"
                android:textColor="#787878"/>
            <TextView
                android:id="@+id/AppDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AppLogo"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="@string/app_desc"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="#787878"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/noMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:drawableStart="@drawable/sleepy"
                android:text="@string/when_there_is_no_movement"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/noMDark"/>
            <Button
                android:id="@+id/noBinaural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:drawableStart="@drawable/no_music"
                android:text="@string/when_binaural_beats_are_not_applied"
                android:layout_below="@+id/noMovement"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/notBinauralDark"/>
            <Button
                android:id="@+id/binaural"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:drawableStart="@drawable/music"
                android:text="@string/when_binaural_beats_are_applied"
                android:layout_below="@+id/noBinaural"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/binauralDark"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>